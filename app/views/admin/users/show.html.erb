<p style="color: green"><%= notice %></p>

<h1> User </h1>

<p>
  <strong> Full name:</strong>
  <%= @user.full_name %>
</p>

<p>
  <strong> Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong> ID:</strong>
  <%= @user.uid %>
</p>

<p>
  <strong> Avatar URL:</strong>
  <%= @user.avatar_url %>
</p>

<p>
  <strong> Role:</strong>
  <%= @user.roles.pluck(:name).join(", ") %>
</p>

<p>
  <%= link_to "Edit", edit_admin_user_path(@user) %> |
  <%= link_to "Back", admin_users_path %>
</p>


